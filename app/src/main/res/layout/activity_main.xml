<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRedBox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/bigGreenBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:layout_weight="2"
        android:layout_margin="30dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="14"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:text="x"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/bigBlueBox"
        android:background="#000"
        android:layout_weight="8"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/orangeBox1"
            android:layout_weight="5"
            android:background="#000"
            android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="sin"
            android:layout_margin="2dp"
            style="@style/gangnamestyle2"

            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="cos"
            android:layout_margin="2dp"

            style="@style/gangnamestyle2"

            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="tan"
            android:layout_margin="2dp"

            style="@style/gangnamestyle2"

            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="π"
            android:layout_margin="2dp"

            style="@style/gangnamestyle2"

            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="!"
            android:layout_margin="2dp"

            style="@style/gangnamestyle2"

            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/orangeBox2"
        android:layout_weight="5"
        android:background="#000"


        android:orientation="vertical"
        android:layout_marginRight="30dp">



        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="In"
            android:layout_margin="2dp"

            style="@style/gangnamestyle2"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="log"
            android:layout_margin="2dp"

            style="@style/gangnamestyle2"

            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="e"
            android:layout_margin="2dp"

            style="@style/gangnamestyle2"

            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="^"
            android:layout_margin="2dp"

            style="@style/gangnamestyle2"

            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="√"
            android:layout_margin="2dp"

            style="@style/gangnamestyle2"

            android:layout_weight="1"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="21"
            android:id="@+id/blackBox"
            android:background="#000"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/greenBox1"
                android:background="#000"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    style="@style/gangnamstyle3"
                    android:layout_margin="2dp"

                    android:layout_weight="1"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:layout_margin="2dp"

                    style="@style/gangnamstyle3"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:layout_margin="2dp"

                    style="@style/gangnamstyle3"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"

                    android:text="÷"
                    style="@style/gangnamstyle"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="("
                    android:layout_margin="2dp"

                    style="@style/gangnamstyle"
                    android:layout_weight="1"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/greenBox2"
                android:background="#000"
                android:layout_weight="1"

                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:layout_margin="2dp"

                    style="@style/gangnamstyle3"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:layout_margin="2dp"

                    style="@style/gangnamstyle3"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:layout_margin="2dp"

                    style="@style/gangnamstyle3"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="x"
                    android:layout_margin="2dp"

                    style="@style/gangnamstyle"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=")"
                    android:layout_margin="2dp"

                    style="@style/gangnamstyle"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/blueBox"
                android:background="#000"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:id="@+id/redBox"
                    android:background="#000"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/greenbox3"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:layout_margin="2dp"

                            style="@style/gangnamstyle3"
                            android:layout_weight="1"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="2"
                            android:layout_margin="2dp"

                            style="@style/gangnamstyle3"
                            android:layout_weight="1"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="3"
                            android:layout_margin="2dp"

                            style="@style/gangnamstyle3"
                            android:layout_weight="1"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="-"
                            android:layout_margin="2dp"

                            style="@style/gangnamstyle"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/greenbox4"
                        android:background="#000"
                        android:layout_weight="1"
                        style="@style/gangnamstyle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:layout_margin="2dp"

                            style="@style/gangnamstyle3"
                            android:layout_weight="2"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="."
                            android:layout_margin="2dp"

                            style="@style/gangnamstyle3"
                            android:layout_weight="1"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="+"
                            android:layout_margin="2dp"

                            style="@style/gangnamstyle"
                            android:layout_weight="1"/>

                    </LinearLayout>
                </LinearLayout>


                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="="
                    android:layout_margin="2dp"

                    style="@style/gangnamstyle"
                    android:layout_weight="1"/>


            </LinearLayout>

            </LinearLayout>
    </LinearLayout>


    </LinearLayout>

